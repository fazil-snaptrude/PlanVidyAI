# Environment Template for VidyaPlanner Backend
# Copy this file to .env and fill in your actual values

# =============================================================================
# GEMINI API CONFIGURATION
# =============================================================================
# Get your API key from: https://aistudio.google.com/apikey
gemini_api_key=your_gemini_api_key_here

# =============================================================================
# GOOGLE ADK (Agent Development Kit) CONFIGURATION
# =============================================================================
# ADK uses these environment variables for Gemini model access
# Usually set to the same value as gemini_api_key above
GOOGLE_API_KEY=your_gemini_api_key_here

# Set to FALSE to use Google AI Studio API (not Vertex AI)
GOOGLE_GENAI_USE_VERTEXAI=FALSE

# =============================================================================
# OPTIONAL: VERTEX AI CONFIGURATION (if using Vertex AI instead)
# =============================================================================
# Uncomment and set these if you prefer to use Vertex AI instead of AI Studio
# GOOGLE_CLOUD_PROJECT=your-gcp-project-id
# GOOGLE_CLOUD_LOCATION=your-gcp-location
# GOOGLE_GENAI_USE_VERTEXAI=TRUE

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Add any other application-specific environment variables here
# DEBUG=true
# LOG_LEVEL=INFO